/*
  Content-Security-Policy: default-src 'self'; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; base-uri 'none'
  Referrer-Policy: no-referrer
  X-Content-Type-Options: nosniff
  Permissions-Policy: clipboard-write=*

/QR.html
  Cache-Control: no-cache, no-store, must-revalidate

/js/*
  Cache-Control: public, max-age=31536000, immutable

/lib/*
  Cache-Control: public, max-age=31536000, immutable

  Cache-Control: no-cache
  X-Content-Type-Options: nosniff

# Cloudflare Pages custom headers

# HTML: no cache for quick updates (prefix with /music)
/music/song.html
  Cache-Control: no-cache
  Content-Type: text/html; charset=utf-8

# Manifest: correct MIME
/music/manifest.json
  Content-Type: application/manifest+json; charset=utf-8
  Cache-Control: no-cache

# Service worker (only if enabled with ?sw=1 at runtime)
/music/sw.js
  Cache-Control: no-cache
  X-Content-Type-Options: nosniff

# Audio: allow range requests, moderate cache, no transform
/music/assets/*.mp3
  Cache-Control: public, max-age=3600, no-transform

# Video: range support + proper types (MV目录)
/music/mv/*.mp4
  Cache-Control: public, max-age=3600, no-transform
  Content-Type: video/mp4

/music/mv/*.mov
  Cache-Control: public, max-age=3600, no-transform
  Content-Type: video/quicktime

# HLS playlists & segments (MV目录)
/music/mv/hls/*.m3u8
  Cache-Control: public, max-age=3600
  Content-Type: application/vnd.apple.mpegurl

/music/mv/hls/*.m4s
  Cache-Control: public, max-age=3600, no-transform
  Content-Type: video/iso.segment

/music/mv/hls/*.ts
  Cache-Control: public, max-age=3600, no-transform
  Content-Type: video/mp2t

/music/mv/*.webm
  Cache-Control: public, max-age=3600, no-transform
  Content-Type: video/webm

# Captions
/music/mv/*.vtt
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/vtt; charset=utf-8

# MV poster images
/music/mv/*.png
  Cache-Control: public, max-age=31536000, immutable

/music/mv/*.jpg
  Cache-Control: public, max-age=31536000, immutable

# MV page itself no-cache
/music/mv/index.html
  Cache-Control: no-cache
  Content-Type: text/html; charset=utf-8

# Images: long cache, immutable
/music/assets/*.png
  Cache-Control: public, max-age=31536000, immutable

/music/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable

# Security best-practice headers (relaxed CSP for Tailwind CDN)
/*
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: autoplay=(self), camera=(), microphone=(), geolocation=()
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  # If you want CSP, ensure Tailwind CDN & media allowed. Adjust if you later self-host Tailwind.
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; media-src 'self' blob:; style-src 'self' 'unsafe-inline'; script-src 'self' https://cdn.tailwindcss.com https://cdn.jsdelivr.net 'unsafe-inline'; connect-src 'self'; base-uri 'self'; form-action 'self'
