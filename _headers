/*
  Content-Security-Policy: default-src 'self'; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; base-uri 'none'
  Referrer-Policy: no-referrer
  X-Content-Type-Options: nosniff
  Permissions-Policy: clipboard-write=*

/QR.html
  Cache-Control: no-cache, no-store, must-revalidate

/js/*
  Cache-Control: public, max-age=31536000, immutable

/lib/*
  Cache-Control: public, max-age=31536000, immutable

  Cache-Control: no-cache
  X-Content-Type-Options: nosniff

# Cloudflare Pages custom headers

# HTML: no cache for quick updates (prefix with /music)
/music/song.html
  Cache-Control: no-cache
  Content-Type: text/html; charset=utf-8

# Manifest: correct MIME
/music/manifest.json
  Content-Type: application/manifest+json; charset=utf-8
  Cache-Control: no-cache

# Service worker (only if enabled with ?sw=1 at runtime)
/music/sw.js
  Cache-Control: no-cache
  X-Content-Type-Options: nosniff

# Audio: allow range requests, moderate cache, no transform
/music/assets/*.mp3
  Cache-Control: public, max-age=3600, no-transform

# Images: long cache, immutable
/music/assets/*.png
  Cache-Control: public, max-age=31536000, immutable

/music/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable

# Security best-practice headers (relaxed CSP for Tailwind CDN)
/*
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: autoplay=(self), camera=(), microphone=(), geolocation=()
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  # If you want CSP, ensure Tailwind CDN & media allowed. Adjust if you later self-host Tailwind.
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; media-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' https://cdn.tailwindcss.com 'unsafe-inline'; connect-src 'self'; base-uri 'self'; form-action 'self'
