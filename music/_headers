# Cloudflare Pages custom headers

# HTML: no cache for quick updates
/song.html
  Cache-Control: no-cache
  Content-Type: text/html; charset=utf-8

# Manifest: correct MIME
/manifest.json
  Content-Type: application/manifest+json; charset=utf-8
  Cache-Control: no-cache

# Service worker (only if enabled with ?sw=1 at runtime)
/sw.js
  Cache-Control: no-cache
  X-Content-Type-Options: nosniff

# Audio: allow range requests, moderate cache, no transform
/assets/*.mp3
  Cache-Control: public, max-age=3600, no-transform

# Images: long cache, immutable
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable

/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable

# Security best-practice headers (relaxed CSP for Tailwind CDN)
/*
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: autoplay=(self), camera=(), microphone=(), geolocation=()
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  # If you want CSP, ensure Tailwind CDN & media allowed. Adjust if you later self-host Tailwind.
  Content-Security-Policy: default-src 'self'; img-src 'self' data:; media-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' https://cdn.tailwindcss.com; connect-src 'self'; base-uri 'self'; form-action 'self'

